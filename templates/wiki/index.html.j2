{% extends "base.html.j2" %}

{% block title %}{{wiki_name}}{% endblock %}

{% block page_content %}
    <h1>{{wiki_name}}</h1>
    {% for namespace in g.view_node.children | sort %}
        <h2>{{namespace}}</h2>
        <ul>
            {% for article in namespace.children | sort %}
                <li>{{article}}</li>
            {% else %}
                <li>(Dieser namespace ist leer.)</li>
            {% endfor %}
        </ul>
    {% else %}
        <p>In diesem wiki sind noch keine Artikel.</p>
    {% endfor %}
{% endblock %}
