{% extends "base.html.j2" %}

{% block title %}{{programmpunkt.__str__()}} bearbeiten — {{event.__str__()}}{% endblock %}

{% block page_content %}
    <h1>
        Programmpunkt „{{programmpunkt.__str__()}}“ auf {{event}}
        <a href="{{g.view_node.parent.url}}" class="btn btn-danger">Abbrechen</a>
    </h1>
    {% if programmpunkt.can_edit(g.user) %}
        {{gen_form(programm_edit_form, g.view_node.url)}}
    {% else %}
        <p>Du bist nicht berechtigt, diesen Programmpunkt zu bearbeiten.</p>
    {% endif %}
{% endblock %}
